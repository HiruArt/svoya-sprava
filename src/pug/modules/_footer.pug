									.site-form__input-item
										.site-form__radio
											input(type="radio" name="contactFormRadio" id="contactFormRadio3")
											label(for="contactFormRadio3") Viber

									.site-form__input-item
										.site-form__radio
											input(type="radio" name="contactFormRadio" id="contactFormRadio4")
											label(for="contactFormRadio4") Skype
						.site-form__row
							.site-form__textarea
								label Коментарій
								textarea().required
						.site-form__row
							.site-form__btn
								input(type="submit" style="display: none;")
								a(href="javascript:void(0);").site-form__btn-i.site-btn.site-form-submit-js
									span Відправити

