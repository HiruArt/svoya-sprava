							.site-form__custom
								label
								.site-form__input-list
									.site-form__input-item
										.site-form__radio
											input(type="radio" name="contactFormRadio" id="contactFormRadio1")
											label(for="contactFormRadio1") Телефон

									.site-form__input-item
										.site-form__radio
											input(type="radio" name="contactFormRadio" id="contactFormRadio2")
